{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@actions/*": [
        "./client/actions/*",
      ],
      "@api/*": [
        "./client/api/*",
      ],
      "@assets/*": [
        "./client/assets/*",
      ],
      "@components/*": [
        "./client/components/*",
      ],
      "@constants/*": [
        "./client/constants/*",
      ],
      "@reducers/*": [
        "./client/reducers/*",
      ],
      "@routes/*": [
        "./client/routes/*",
      ],
    },
  },
  "include": [
    "./vite.config.ts",
    "./client/**/*",
  ],
  "exclude": [
    "./server/**/*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
